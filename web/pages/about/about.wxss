/* pages/about/about.wxss */

.contact_pic {
  width: 100%;
  height: 430rpx;
  /* background: red; */
  border-bottom: 1px solid #cecece;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.contact_pic image {
  width: 400rpx;
  height: 320rpx;
}

.contact_pic text {
  /* background: red; */
  height: 70rpx;
  font-size: 60rpx;
  margin-top: 25rpx;
  color: gray;
}

.contact_us {
  width: 100%;
  height: 450rpx;
  /* background: red; */
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #cecece;
}

.contact_us button.image_but {
  background-color: #fff;
  margin: 0;
  padding: 0;
  margin-top: 100rpx;
  height: 150rpx;
  border: none;
  position: none;
}

.contact_us button.kefu {
  background-color: #fff;
  margin: 0;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  border: none;
  position: none;
}

.contact_us button.comein {
  background-color: #fff;
  margin: 0;
  padding: 0;
  height: 50rpx;
  line-height: 50rpx;
  border: none;
  position: none;
  margin-top: -10rpx;
}

.contact_us image {
  width: 150rpx;
  height: 150rpx;
}

.contact_us text.tip {
  font-weight: bold;
}

.contact_us text.notice {
  font-size: 32rpx;
  color: gray;
}

.introduce {
  padding-top: 35rpx;
  width: 96%;
  display: flex;
  flex-direction: column;
  margin-left: 2%;
  margin-bottom: 60rpx;
}

.introduce text {
  font-family: "宋体";
  font-size: 36rpx;
  height: 50rpx;
  line-height: 50rpx;
}
