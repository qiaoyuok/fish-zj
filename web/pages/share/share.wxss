/* pages/share/share.wxss */
.tip{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
}
.share_tip{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin-top: 20rpx;
  font-size: 70rpx;
  color: #2FA6E1;
}
.qr_image{
  width: 100%;
  text-align: center;
  height: 500rpx;
}
.qr_image image{
  width: 500rpx;
  height: 500rpx;
}
.change_qr_tip{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: grey;
}
.share_notice{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #1D5FBA;
  font-size: 32rpx;
  margin-top: 40rpx;
  font-weight: bold;
}
.scroll{
  width: 100%;
  margin-top: 10rpx;
  /* padding: 10rpx 20rpx 0 20rpx; */
  /* background: rgba(221, 221, 221, 0.5); */
}
.scroll .user_item{
  width: 140rpx;
  height: 160rpx;
  /* background: red; */
  float: left;
  margin-left: 10rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.scroll .user_item image{
  width: 120rpx;
  height: 120rpx;
  /* background: red; */
  border-radius: 20rpx;
}
.scroll .user_item text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: gray;
}
.empty_notice{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 160rpx;
  color: gray;
  font-size: 30rpx;
  text-align: center;
}