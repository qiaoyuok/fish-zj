/**index.wxss**/
.slider{
  width: 100%;
  height: 100%;
    background: rgba(255, 255, 255, 0.1);  
   /* background: red;  */
  position: absolute;
  top:0;
  z-index: 11;
}
.slider .showbg{
  position: relative;
  width: 80%;
  left: 10%;
  top: 40%;
  height: 180rpx;
  background: rgba(79, 79, 79, 0.7);
}
.slider .slider_step{
  position: absolute;
  width: 80%;
  height: 30rpx;
  left: 10%;
  background: #fff;
  top: 100rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.slider .slider_step view{
  height: 30rpx;
  background: #7CA9C9;
}
.slider .notice{
  position: absolute;
  width: 100%;
  font-size: 32rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #7CA9C9;
  top: 30rpx;
}
.bg{
  width: 100%;
  height: 446rpx;
  position: relative;
  /* background: red; */
}
.bg image.qu{
  width: 80rpx;
  height: 60rpx;
  position: absolute;
  top: 20px;
  right: 20px;
}
.bg image.logo{
  width: 53%;
  height: 130rpx;
  position: absolute;
  top: 120rpx;
  left: 25%;
}
.bg .device_info{
  width: 100%;
  height: 120rpx;
   /* background: red;  */
  position: absolute;
  bottom: 30rpx;
  display: flex;
  flex-direction: column;
  color: #fff;
  font-family: "Times New Roman", Times, serif;  
}
.bg .device_info .tip{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 50rpx;
  font-weight: bold;
}
.bg .device_info .device_name{
  text-align: center;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 30rpx;
  font-family: "黑体";
}

.control_group{
  width: 60%;
  height: 420rpx;
  /* background: red;   */
  display: flex;
  flex-direction: column;
  margin: auto;
  margin-top: 40rpx;
  
}
.control_group .small_group{
  width: 100%;
  height: 200rpx;
  display: flex;
  /* background: pink;  */
  justify-content: space-between;
}
.control_group .small_group .control_item{
  padding: 10rpx;
  width: 170rpx;
  height: 190rpx;
  /* background: green;   */
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
}
.control_group .small_group .control_item image{
  width: 130rpx;
  height: 140rpx;
  border-radius: 15rpx;
}
.control_group .small_group .control_item text{
  font-size: 30rpx;
  /* background: pink; */
  margin-top: 5rpx;
}
.bot_tip{
  width: 100%;
  height: 80rpx;
   /* background: red;   */
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bot_tip .mid{
  width: 200rpx;
   /* background: green;  */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 45rpx;
}
.bot_tip .mid text{
  margin-top: 15rpx;
  font-family:Arial,Helvetica,sans-serif;
  color: #BBBBBC;
}
.bot_tip .mid image{
  width: 175rpx;
  height: 25rpx;
  margin-top: -1rpx;
}
.bot_tip .line{
  width: 295rpx;
  height: 3rpx;
  background: #ddd;
}
.bott{
  width: 90%;
  height: 150rpx;
  /* background: red; */
  display: flex;
  margin-top: 45rpx;
}
.bott .bott_item{
  width: 25%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  /* background: green; */
  justify-content: center;
  align-items: center;
}
.bott .bott_item image{
  width: 72rpx;
  height: 72rpx;
}
.bott .bott_item text{
  font-size: 26rpx;
  margin-top: 10rpx;
}
.copy_right{
  width: 100%;
  height: 145rpx;
  background: #76B161;
  margin-top: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.copy_right image{
  width: 154rpx;
  height: 55rpx;
}
.copy_right text{
  font-size: 22rpx;
  font-weight: lighter;
  font-family: Arial, Helvetica, sans-serif;
  color: #fff;
}

.warn{
  width: 160rpx;
  height: 200rpx;
  /* background: red;   */
  position: absolute;
  left: 10rpx;
  text-align: center;
}
.warn image{
  width: 70rpx;
  height: 64rpx;
  margin-top: 15rpx;
  margin-left: 45rpx;
  display: block;
}
.warn view{
  font-size: 24rpx;
  margin-top: 15rpx;
}
.pics{
  width: 90%;
  height: 300rpx;
  margin: auto;
  margin-top: 30rpx;
    /* background: red;     */
  display: flex;
  justify-content: center;
}
.pics view{
  width: 170rpx;
  height: 170rpx;
  /* background: red; */
}
.pics image:hover{
  height: 168rpx;
  width: 168rpx;
}
.pics image{
  height: 165rpx;
  width: 165rpx;
}
.pics .pic_bot{
  margin-top: 120rpx;
}
